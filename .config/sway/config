### Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu exec wofi --show drun

set $laptop eDP-1
set $doma HDMI-A-1
set $ured1 DP-3
set $ured2 DP-4

set $fexplorer nnn
set $coding code-oss
set $browser firefox
set $swaylock swaylock

### Output configuration
output * {
    bg /home/jakov/Pictures/wallpaper/lake.jpg fill
}
output $laptop {
    scale 2
    pos 2560 360 res 3840x2160
}

output $doma {
    scale 1
    pos 0 0 res 2560x1440
}

output $ured1 {
    scale 1
    pos 1920 0 res 1920x1080
}

output $ured2 {
    scale 1
    pos 0 0 res 1920x1080
}

### Laptop configuration
bindswitch --reload --locked lid:on output $laptop disable
bindswitch --reload --locked lid:off output $laptop enable

### Idle configuration
exec swayidle -w \
        timeout 300 '$swaylock' \
        timeout 600 'sudo zzz' \
        before-sleep '$swaylock'

### Input configuration
input type:touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}
input type:keyboard {
    xkb_layout hr,us
    xkb_options grp:lalt_rshift_toggle
}
input type:touch {
    events disabled
}

