### Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu exec wofi --show drun

set $fexplorer Thunar
set $coding code-oss
set $browser firefox
set $swaylock swaylock

set $gnome_schema org.gnome.desktop.interface
set $cursor_theme Breeze_Obsidian

set $theme_main #cf636c 
set $theme_accent #ef636c
set $theme_contrast #cf636c 
set $theme_contrast_accent #cf636c 
set $theme_background #2a2c2f 

### Output configuration
output * {
    bg /home/jakov/Pictures/wallpaper/rock_beach_brittany.jpeg fill
}

### Laptop configuration
bindswitch --reload --locked lid:off exec kanshictl switch lid-opened
bindswitch --reload --locked lid:on exec kanshictl switch lid-closed

### Idle configuration
exec swayidle -w \
        timeout 300 '$swaylock' \
        timeout 420 'sudo zzz' \
	timeout 10 'if pgrep -x swaylock; then sudo zzz; fi' \
        before-sleep '$swaylock'

