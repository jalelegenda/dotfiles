    gsettings set $gnome_schema gtk-theme 'Greybird-dark'
    gsettings set $gnome_schema icon-theme 'Papirus'
    gsettings set $gnome_schema cursor-theme $cursor_theme
    gsettings set $gnome_schema cursor-size 18
