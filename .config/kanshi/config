output 'Lenovo Group Limited 0x403D Unknown' alias $builtin
output 'AOC Q3279WG5B 0x00000B16' alias $desk 

profile lid_opened {
    output $builtin {
	enable
	scale 1
	position 320,1440 
        mode 1920x1200
    }

    output $desk {
	enable
	scale 1
	position 0,0 
        mode 2560x1440
    }
    exec swaymsg workspace 1, move workspace to $desk
    exec swaymsg workspace 2, move workspace to $builtin
}

profile lid_closed {
    output $builtin disable
    output $desk {
	enable
	scale 1
	position 0,0 
        mode 2560x1440
    }
}

profile laptop {
    output $desk disable
    output $builtin {
	scale 1
	position 0,0
        mode 1920x1200
    }
}
